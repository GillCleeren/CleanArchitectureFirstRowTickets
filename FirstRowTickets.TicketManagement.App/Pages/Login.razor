@page "/login"

<div class="mt-5 row">
    <div class="card col-12 col-lg-6 me-auto ms-auto p-3">
        <h3 class="card-title">Login to FirstRowTickets</h3>
        <div class="card-body">
            <EditForm Model="@LoginViewModel" OnValidSubmit="HandleValidSubmit">
                <div class="row mt-2">
                    <label class="col-12 col-md-4 p-0 form-label" for="userName">Email:</label>
                    <div class="col-12 col-md-8">
                        <InputText id="userName" class="form-control login-field" @bind-Value="LoginViewModel.Email"></InputText>
                    </div>
                </div>
                <div class="row mt-2">
                    <label class="col-12 col-md-4 p-0 form-label" for="password">Password:</label>
                    <div class="col-12 col-md-8">
                        <InputText type="password" id="password" class="form-control login-field" @bind-Value="@LoginViewModel.Password"></InputText>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="offset-md-4">
                        <button class="m-2 p-2 ms-0">Login</button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>

<span class="label label-error">@Message</span>